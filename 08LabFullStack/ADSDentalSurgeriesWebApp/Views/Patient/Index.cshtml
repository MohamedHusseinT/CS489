@model ADSDentalSurgeriesWebApp.ViewModels.PatientListViewModel
@{
    ViewData["Title"] = "Patients";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6 text-primary">
                        <i class="fas fa-users me-2"></i>Patients
                    </h1>
                    <p class="text-muted">Manage patient records and information</p>
                </div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Patient
                </a>
            </div>

            <!-- Search Form -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" name="searchTerm" 
                                       value="@Model.SearchTerm" placeholder="Search patients by name, number, email, or phone...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="fas fa-search me-1"></i>Search
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Clear
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results Summary -->
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <div>
                    <strong>@Model.TotalCount</strong> patient(s) found
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <span>for "<strong>@Model.SearchTerm</strong>"</span>
                    }
                </div>
            </div>

            <!-- Patients Table -->
            @if (Model.Patients.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Patient Number</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Address</th>
                                        <th>Appointments</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var patient in Model.Patients)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@patient.PatientNumber</span>
                                            </td>
                                            <td>
                                                <strong>@patient.FullName</strong>
                                                @if (patient.DateOfBirth.HasValue)
                                                {
                                                    <br><small class="text-muted">DOB: @patient.DateOfBirth.Value.ToString("MMM dd, yyyy")</small>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(patient.Email))
                                                {
                                                    <a href="mailto:@patient.Email" class="text-decoration-none">
                                                        <i class="fas fa-envelope me-1"></i>@patient.Email
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No email</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(patient.PhoneNumber))
                                                {
                                                    <a href="tel:@patient.PhoneNumber" class="text-decoration-none">
                                                        <i class="fas fa-phone me-1"></i>@patient.PhoneNumber
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No phone</span>
                                                }
                                            </td>
                                            <td>
                                                @if (patient.Address != null)
                                                {
                                                    <small>@patient.Address.ToString()</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No address</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(patient.Appointments?.Count ?? 0)</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@patient.PatientId" 
                                                       class="btn btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@patient.PatientId" 
                                                       class="btn btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@patient.PatientId" 
                                                       class="btn btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No patients found</h5>
                        <p class="text-muted">
                            @if (string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <span>Get started by adding your first patient.</span>
                            }
                            else
                            {
                                <span>No patients match your search criteria.</span>
                            }
                        </p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add New Patient
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
