@model ADSDentalSurgeriesWebApp.ViewModels.PatientViewModel
@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6 text-danger">
                        <i class="fas fa-user-times me-2"></i>Delete Patient
                    </h1>
                    <p class="text-muted">Confirm deletion of patient record</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>

            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning!</strong> This action cannot be undone. Deleting this patient will also remove all associated appointments.
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-danger mb-4">Are you sure you want to delete this patient?</h5>
                    
                    <div class="row">
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Patient Number</label>
                                        <div class="fs-5">
                                            <span class="badge bg-secondary fs-6">@Model.PatientNumber</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Full Name</label>
                                        <div class="fs-5 fw-bold">@Model.FullName</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Email Address</label>
                                        <div class="fs-6">
                                            @if (!string.IsNullOrEmpty(Model.Email))
                                            {
                                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                                    <i class="fas fa-envelope me-1"></i>@Model.Email
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No email provided</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">Phone Number</label>
                                        <div class="fs-6">
                                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                            {
                                                <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                                    <i class="fas fa-phone me-1"></i>@Model.PhoneNumber
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No phone provided</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @if (Model.DateOfBirth.HasValue)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label text-muted">Date of Birth</label>
                                            <div class="fs-6">
                                                <i class="fas fa-calendar me-1"></i>@Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label text-muted">Age</label>
                                            <div class="fs-6">
                                                @{
                                                    var age = DateTime.Now.Year - Model.DateOfBirth.Value.Year;
                                                    if (DateTime.Now.DayOfYear < Model.DateOfBirth.Value.DayOfYear)
                                                    {
                                                        age--;
                                                    }
                                                }
                                                <i class="fas fa-birthday-cake me-1"></i>@age years old
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (Model.Address != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-muted">Primary Address</label>
                                    <div class="fs-6">
                                        <i class="fas fa-map-marker-alt me-1"></i>@Model.Address.ToString()
                                    </div>
                                </div>
                            }

                            <div class="mb-3">
                                <label class="form-label text-muted">Registration Date</label>
                                <div class="fs-6">
                                    <i class="fas fa-calendar-plus me-1"></i>@Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6 class="card-title">Impact Summary</h6>
                                    <div class="mb-2">
                                        <span class="badge bg-danger fs-6">@(Model.Appointments?.Count ?? 0)</span>
                                        <small class="text-muted d-block">Appointments Affected</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Appointments != null && Model.Appointments.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This patient has @Model.Appointments.Count scheduled appointment(s) that will also be deleted.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Patient
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
