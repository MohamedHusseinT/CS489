@model ADSDentalSurgeriesWebApp.ViewModels.AddressViewModel
@{
    ViewData["Title"] = "Edit Address";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6 text-primary">
                        <i class="fas fa-edit me-2"></i>Edit Address
                    </h1>
                    <p class="text-muted">Update address information</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="AddressId" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Street" class="form-label">
                                <i class="fas fa-road me-1"></i>Street Address *
                            </label>
                            <input asp-for="Street" class="form-control" placeholder="123 Main Street" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">
                                        <i class="fas fa-city me-1"></i>City *
                                    </label>
                                    <input asp-for="City" class="form-control" placeholder="Phoenix" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="State" class="form-label">
                                        <i class="fas fa-map me-1"></i>State *
                                    </label>
                                    <input asp-for="State" class="form-control" placeholder="AZ" maxlength="2" />
                                    <span asp-validation-for="State" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="mb-3">
                                    <label asp-for="ZipCode" class="form-label">
                                        <i class="fas fa-mail-bulk me-1"></i>Zip Code *
                                    </label>
                                    <input asp-for="ZipCode" class="form-control" placeholder="85001" />
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Country" class="form-label">
                                <i class="fas fa-globe me-1"></i>Country
                            </label>
                            <input asp-for="Country" class="form-control" placeholder="USA" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Leave blank to use default (USA)
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Address
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
